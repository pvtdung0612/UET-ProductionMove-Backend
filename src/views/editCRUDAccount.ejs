<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Edit Account's Infomation</title>

        <!-- Latest compiled and minified CSS -->
        <link rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
        <!-- jQuery library -->
        <script
            src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>
        <!-- Popper JS -->
        <script
            src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
        <!-- Latest compiled JavaScript -->
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script></head>
    <body>
        <div class="container">
            <div class="row">
                <form action="/put-crud-account" method="POST">
                    <div class="form-row">
                        <div class="col-12 my-2"><b>Edit Account's Infomation</b></div>
                        <div class="form-group col-md-6">
                            <label for="inputEmail4">Username</label>
                            <input type="text" class="form-control"
                                name="username"
                                placeholder="Username"
                                value="<%= account.username%>"
                            >
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputPassword4">Password</label>
                            <input type="password" class="form-control"
                                name="password" placeholder="Password"
                                value="<%= account.password%>"
                            >
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="inputState">Role Key</label>
                            <select name="roleKey" class="form-control">
                                <option selected value="R1">DellCorp</option>
                                <option value="R2">Factory</option>
                                <option value="R3">Agent</option>
                                <option value="R4">Insurance</option>
                                <option value="R5">Customer</option>
                            </select>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputPassword4">Work Place ID</label>
                            <input type="text" class="form-control"
                                name="workplaceID" placeholder="Work Place ID"
                                value="<%= account.workplaceID%>"
                            >
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputAddress">Image</label>
                        <input type="text" class="form-control"
                            name="image"
                            placeholder="Url Image">
                    </div>
                    <input name="id" value="<%= account.id%>" type="text"
                    hidden>
                    <button type="submit" class="btn btn-primary">Update</button>
                </form>
            </div>
        </div>
    </body>
</html>